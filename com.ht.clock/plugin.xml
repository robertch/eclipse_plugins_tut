<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Åšledzenie czasu"
            id="com.ht.clock.ui">
      </category>
      <view
            name="Widok zegara"
            icon="icons/sample.gif"
            category="com.ht.clock.ui"
            class="com.ht.clock.views.ClockView"
            id="com.ht.clock.views.ClockView">
      </view>
      <view
            category="com.ht.clock.ui"
            class="com.ht.clock.views.TimeZoneView"
            icon="icons/sample.gif"
            id="com.ht.clock.TimeZoneView"
            name="Widok strefy czasowej"
            restorable="true">
      </view>
      <view
            category="com.ht.clock.ui"
            class="com.ht.clock.views.TimeZoneTreeView"
            id="com.ht.clock.view.TimeZoneTreeView"
            name="Widok drzewa stref czasowych"
            restorable="true">
      </view>
      <view
            category="com.ht.clock.ui"
            class="com.ht.clock.views.TimeZoneTableView"
            icon="icons/sample.gif"
            id="com.ht.clock.view.TimeZoneTableView"
            name="Widok tabeli stref czasowych"
            restorable="true">
      </view>
   </extension>
	<extension
	      point="org.eclipse.core.runtime.adapters">
    <factory
          adaptableType="java.util.TimeZone"
          class="com.ht.clock.util.TimeZoneAdapterFactory">
       <adapter
             type="org.eclipse.ui.views.properties.IPropertySource">
       </adapter>
    </factory>
	</extension>
 <extension
       point="org.eclipse.ui.commands">
    <command
          id="com.ht.clock.commands.TestComm"
          name="TestComm">
    </command>
 </extension>
 <extension
       point="org.eclipse.ui.handlers">
    <handler
          class="com.ht.clock.util.HelloHandler"
          commandId="com.ht.clock.commands.TestComm">
    </handler>
 </extension>
 <extension
       point="org.eclipse.ui.menus">
    <menuContribution
          allPopups="false"
          locationURI="menu:help?after=additions">
       <command
             commandId="com.ht.clock.commands.TestComm"
             label="TEstcomm"
             style="push">
       </command>
    </menuContribution>
 </extension>
 <extension
       point="org.eclipse.ui.bindings">
    <key
          commandId="com.ht.clock.commands.TestComm"
          contextId="org.eclipse.ui.contexts.window"
          schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
          sequence="M1+9">
    </key>
 </extension>
 <extension
       point="org.eclipse.ui.preferencePages">
    <page
          class="com.ht.clock.pages.ZegarPreferencesPage"
          id="com.ht.clock.pages.Zegar"
          name="Zegar">
    </page>
 </extension>
</plugin>
